<% layout('/layouts/boilerplate') -%>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Your Bookings</h2>

    <% if (bookings.length === 0) { %>
        <div class="alert alert-info text-center" role="alert">
            You have no bookings yet.
        </div>
    <% } else { %>
        <div class="row">
            <% for (let booking of bookings) { %>
                <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title"><%= booking.listing.title %></h5>
             <h6 class="card-subtitle mb-2 text-muted">
                                    <%= booking.createdAt.toDateString() %>
                                </h6>
                                <p class="card-text mb-1">
                                                  <strong>Booked by:</strong> <%= booking.name %> 
                                    (<%= booking.phone %>)
                                </p>
                                <p class="card-text">
                         <small class="text-muted">
                                        Location: <%= booking.listing.location %>, <%= booking.listing.country %>
                           </small>
                                </p>
                     </div>
             </div> 
                </div>
                </div>
      <% } %>
    </div>
    <% } %>
</div>
